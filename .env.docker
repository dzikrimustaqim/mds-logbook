# Application
APP_NAME="MDS Logbook"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=http://localhost:18080
APP_PORT=18080

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=db
DB_PORT_INTERNAL=3306
DB_DATABASE=mds_logbook_db
DB_USERNAME=mds_user
DB_PASSWORD=mds_secure_2025
DB_ROOT_PASSWORD=root_secure_2025

# Cache & Session
CACHE_STORE=file
SESSION_DRIVER=file
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=database

# Logging
LOG_CHANNEL=daily
LOG_LEVEL=error

# Mail
MAIL_MAILER=log
MAIL_FROM_ADDRESS="noreply@mdslogbook.local"
MAIL_FROM_NAME="${APP_NAME}"